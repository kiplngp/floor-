<!--sign in area defined-->
<div id="signIn_area">
	<div class="sign_in_tp">
    	<div class="sign_left">
        	<div class="sign_right">
             	<h1>List of Products</h1>
          </div>
        </div>
    </div>
    
	<div class="sign_left_slc">
    
    	<div class="sign_right_slc">
        <div class="userListing">
        	<table width="100%" border="0" cellspacing="0" cellpadding="0">
  <tr>
    <th align="left">S.N.</th>
    <th align="left">Product Code</th>
    <th align="left">Manufacturer Name</th>
    <th align="left">Product Name</th>
    <th align="left">Product Image</th>
    
    
    <th align="left" class="border-right">Action</th>
    </tr>
  <% @products.each do |product| %>
    <tr>
      <td class="border-bottom"><%= product.id %></td>
      <td class="border-bottom"><%= product.product_code %></td>
      <td class="border-bottom"><%= product.manufacturer_name %></td>
      <td class="border-bottom"><%= product.product_name %></td>
      <td class="border-bottom"><%= image_tag product.image_url(:thumb) if product.image? %></td>
      
      <td class="border-bottom-right"><%= link_to 'View', product %> | <%= link_to 'Edit', edit_product_path(product) %> | <%= link_to 'Destroy', product , :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

        </div>
        
         <div class="clear"></div>       
      </div>
    </div>
    
    <div class="sign_ftr_slc">
    	<div class="sign_ftr_left">
        	<div class="sign_ftr_right">
            
            	
              
                
            </div>
        </div>
    </div>
</div>
<!--sign in area defined-->
