                  <li class="customerTab" tabindex="0">Orders</li>
                  <li class="customerTab" tabindex="0">Communications </li>
                  <li class="customerTab" tabindex="0">Notes    </li>
      	    </ul>
        	  <div class="customerContentGroup">
        	    <div class="customerContent">
                	<table width="100%" border="0" cellspacing="2" cellpadding="2">
                      <tr>
                        <td valign="top" width="50%">
                        	<div style="background:#E6E6E6; padding:1px">
                            	<table width="100%" border="0" cellspacing="1" cellpadding="1">
                                  <tr>
                                    <th>Company Name</th>
                                  </tr>
                                  <tr>
                                    <td><%= @customer.company_name %></td>
                                  </tr>
                                  <tr>
                                    <th>VAT Number</th>
                                  </tr>
                                  <tr>
                                    <td><%= @customer.vat_number %></td>
                                  </tr>
                                  <tr>
                                    <th>VAT Rate</th>
                                  </tr>
                                  <tr>
                                    <td><%= @customer.vat_rate %></td>
                                  </tr>
                                </table>

                            </div>
                        </td>
                        <td valign="top" width="50%"><div style="background:#E6E6E6; padding:1px">
                            	<table width="100%" border="0" cellspacing="1" cellpadding="1">
                                  <tr>
                                    <th>GL Code</th>
                                  </tr>
                                  <tr>
                                    <td><%= @customer.gl_code %></td>
                                  </tr>
                                  <tr>
                                    <th>Account Number (Internal)</th>
                                  </tr>
                                  <tr>
                                    <td><%= @customer.acc_noi %></td>
                                  </tr>
                                  <tr>
                                    <th>Account Number (External)</th>
                                  </tr>
                                  <tr>
                                    <td><%= @customer.acc_noe %></td>
                                  </tr>
                                </table>

                            </div></td>
                      </tr>
                    </table>

                </div>
        	    <div class="customerContent">
        	    <% for contact in @customer.contacts %>
                	<table width="100%" border="0" cellspacing="2" cellpadding="2">
                      <tr>
                        <td valign="top" width="50%">
                        	<div style="background:#E6E6E6; padding:1px">
                        	
                            	<table width="100%" border="0" cellspacing="1" cellpadding="1">
                                  <tr>
                                    <th>Contact Name</th>
                                  </tr>
                                  <tr>
                                    <td><%=h contact.contact_name %></td>
                                  </tr>
                                  <tr>
                                    <th>Contact Position</th>
                                  </tr>
                                  <tr>
                                    <td><%=h contact.contact_position %></td>
                                  </tr>
                                  <tr>
                                    <th>Contact Number</th>
                                  </tr>
                                  <tr>
                                    <td><%=h contact.contact_number %></td>
                                  </tr>
                                </table>

                            </div>
                        </td>
                        <td valign="top" width="50%"><div style="background:#E6E6E6; padding:1px">
                            	<table width="100%" border="0" cellspacing="1" cellpadding="1">
                                  <tr>
                                    <th>Mobile Number</th>
                                  </tr>
                                  <tr>
                                    <td><%=h contact.contact_mobile_number %></td>
                                  </tr>
                                  <tr>
                                    <th>Email Address</th>
                                  </tr>
                                  <tr>
                                    <td><%=h contact.contact_email %></td>
                                  </tr>
                                  
                                </table>
                                
                            </div></td>
                      </tr>
                    </table>
                    
                    <% end %>
                </div>
                <div class="customerContent">
                  <table width="100%" border="0" cellspacing="2" cellpadding="2">
