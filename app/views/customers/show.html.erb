                                  <td valign="top" width="50%">
                                  	<div style="background:#E6E6E6; padding:1px">
                                      	<table width="100%" border="0" cellspacing="1" cellpadding="1">
                                            <tr>
                                              <th>Credit Limit</th>
                                            </tr>
                                            <tr>
                                              <td><%= @customer.credit_limit %></td>
                                            </tr>
                                            <tr>
                                              <th>Settelment Due</th>
                                            </tr>
                                            <tr>
                                              <td><%= @customer.settelment_due %></td>
                                            </tr>
                                            <tr>
                                              <th>Settelment Discount</th>
                                            </tr>
                                            <tr>
                                              <td><%= @customer.settelment_discount %></td>
                                            </tr>
                                          </table>

                                      </div>
                                  </td>
                                  <td valign="top" width="50%"><div style="background:#E6E6E6; padding:1px">
                                      	<table width="100%" border="0" cellspacing="1" cellpadding="1">
                                            <tr>
                                              <th>Trading Terms</th>
                                            </tr>
                                            <tr>
                                              <td><%= @customer.trading_terms %></td>
                                            </tr>
                                            <tr>
                                              <th>Credit Position</th>
                                            </tr>
                                            <tr>
                                              <td><%= @customer.credit_position %></td>
                                            </tr>
                                            <tr>
                                              <th>Account On Hold</th>
                                            </tr>
                                            <tr>
                                              <td><%= @customer.account_on_hold %></td>
                                            </tr>
                                          </table>

                                      </div></td>
                                </tr>
                              </table>
                </div>
                <div class="customerContent">
                  Orders Content
                </div>
                <div class="customerContent">
                <% for communication in @customer.communications %>
                <table width="100%" border="0" cellspacing="2" cellpadding="2">

                            <tr>

                              <td valign="top" width="50%">
                              	<div style="background:#E6E6E6; padding:1px">
                              		
                                  	<table width="100%" border="0" cellspacing="1" cellpadding="1">
                                        <tr>
                                          <th>Communication Date</th>
                                        </tr>
                                        <tr>
                                          <td><%=h communication.comm_date%></td>
                                        </tr>
                                        <tr>
                                          <th>Contact Type </th>
                                        </tr>
                                        <tr>
                                          <td><%=h communication.comm_type %></td>
                                        </tr>
                                        <tr>
                                          <th>Communication Subject </th>
                                        </tr>
                                        <tr>
                                          <td><%=h communication.comm_subject %></td>
                                        </tr>
                                      </table>

                                  </div>
                              </td>
                              <td valign="top" width="50%"><div style="background:#E6E6E6; padding:1px">
                                  	<table width="100%" border="0" cellspacing="1" cellpadding="1">
                                        <tr>
                                          <th>Communication Notes </th>
                                        </tr>
                                        <tr>
                                          <td><%=h communication.comm_notes %></td>
                                        </tr>


                                      </table>
        							                
                                  </div>

                                </td>

                            </tr>

                          </table>
